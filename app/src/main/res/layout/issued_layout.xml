<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Book Name"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            >

        </TextView>
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="220dp"
            android:layout_height="300dp"
            android:layout_below="@+id/product_book_name"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            >

        </ImageView>
        <TextView
        android:id="@+id/product_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auther Name"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_below="@+id/product_image"
        >

    </TextView>

        <TextView
            android:id="@+id/issued_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_below="@+id/product_book_author"
            android:layout_marginTop="5dp"
            >

        </TextView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>