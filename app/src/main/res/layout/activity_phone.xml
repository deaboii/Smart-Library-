<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/welcometext"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        >
    </TextView>

    <ImageView

        android:id="@+id/app_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/welcometext"
        android:src="@drawable/realapplogo"

        />

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Library"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/welcometext"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        >
    </TextView>

    <EditText
        android:id="@+id/ClgKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_design"
        android:layout_above="@+id/phone_no_input"
        android:layout_marginBottom="10dp"
        android:hint="Enter College Id"
        android:textAllCaps="false"
        android:textSize="12dp"
       android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="15dp"
        android:drawableStart="@drawable/college_id_png"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >

    </EditText>

    <EditText
        android:id="@+id/phone_no_input"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_design"
        android:hint="Enter phone Number"
        android:textAlignment="center"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:drawableStart="@drawable/phone_png"
        android:textStyle="bold"
        android:layout_above="@+id/verfycode_btn"
        >

    </EditText>

    <EditText
        android:id="@+id/verifiaction_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verfycode_btn"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/verificationcode_png"
        android:hint="Enter Verification code"
        android:inputType="number"
        android:padding="15dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"


        >

    </EditText>

    <Button
        android:id="@+id/send_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
      android:layout_alignParentBottom="true"
        android:text="Send verification code"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:padding="15dp"
        >

    </Button>
    <Button
        android:id="@+id/verfycode_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Verify"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible"
                android:textSize="12dp"
        android:padding="15dp"

        >

    </Button>

</RelativeLayout>