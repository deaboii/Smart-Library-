<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FineActivity">

    <ImageView
        android:id="@+id/rupeeicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rupeeicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/Totalfineview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rupeeicon"
        android:text="No Fine"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_red_dark"
        >
    </TextView>

    <Button
        android:id="@+id/payfinebtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Pay Fine"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/Totalfineview"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="60dp"

        >
    </Button>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3732282418296287/5285534703"
        >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>