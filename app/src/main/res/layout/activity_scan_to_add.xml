<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanToAddActivity"
    android:background="@drawable/background_blank">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/addbooks"
        android:layout_marginTop="80dp"
        >

    </ImageView>

    <EditText
        android:id="@+id/bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="12dp"
        android:padding="15dp"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_below="@+id/bookImage"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        >

    </EditText>


    <EditText
        android:id="@+id/bookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_below="@+id/bookTitle"
        android:layout_marginTop="5dp"
        android:textColor="#D5009F"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12dp"
        android:padding="15dp"
        >
    </EditText>

    <EditText

        android:id="@+id/bookCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_below="@+id/bookAuthor"
        android:layout_marginTop="5dp"
        android:textColor="#07DD00"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12dp"
        android:padding="15dp"
        >
    </EditText>
    <EditText
        android:id="@+id/bookDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:layout_below="@+id/bookCategory"
        android:layout_marginTop="5dp"
        android:textColor="#590098"
        android:textSize="12dp"
        android:padding="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
    </EditText>

    <Button
        android:id="@+id/addBookbtn"
        android:text="Add Book"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/buttons"
        android:textAllCaps="true"
        android:textSize="12dp"
        android:padding="15dp"
        >

    </Button>










</RelativeLayout>